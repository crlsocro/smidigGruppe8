<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@drawable/loginpage">

    <ImageView
        android:id="@+id/tidvisIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"
        app:srcCompat="@drawable/tidvis" />

    <TextView
        android:id="@+id/geostory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Geostory"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/newProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="New profile"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="E-mail"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Email"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="40dp"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/password"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="40dp"
        android:background="@color/white"
        />
   <TextView
        android:id="@+id/repeatPassword"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Password"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:id="@+id/editRepeatPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Repeat Password"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="40dp"
        android:background="@color/white"
        />
    <CheckBox
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:id="@+id/checkBox1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/checkBox1"
        android:text="Vil du ha oppdateringer fra tidvis?"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"/>
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:text="Godkjent at vi lagrer din infromasjon" />
    <TextView
        android:id="@+id/text2"
        android:layout_toRightOf="@+id/checkBox2"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Godkjent at vi lagrer din infromasjon"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/submitR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrer deg"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        />

</LinearLayout>